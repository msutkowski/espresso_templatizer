{
  "compilerOptions": {
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
